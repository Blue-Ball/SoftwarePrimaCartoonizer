                            </BeginStoryboard>

                        </EventTrigger.Actions>
                    </EventTrigger>

                </StackPanel.Triggers>
            </StackPanel>
            <Button Name="ApplyEffectButton" Background="Snow" BorderBrush="#FFEBC5FC"  Cursor="Hand" Click="Button_Click_3" FontSize="16" Foreground="Black" Height="42" HorizontalAlignment="Left" IsCancel="False" IsDefault="False" IsEnabled="True" Margin="250,68,0,0" VerticalAlignment="Top" 
                    Visibility="Hidden" Width="150">
