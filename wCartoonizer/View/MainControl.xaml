                                        Width="100"
                                        Margin="2"
                                        VerticalAlignment="Center"
                                        IsSelectionRangeEnabled="False"
                                        Maximum="200"
                                        Minimum="10"
                                        SmallChange="20"
                                        TickFrequency="200"
                                        ValueChanged="zoomControl_ValueChanged"
                                        Value="100" />
