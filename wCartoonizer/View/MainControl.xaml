                            <Thickness Bottom="0"
                                       Left="0"
                                       Right="-220"
                                       Top="478" />
                        </ToggleButton.Tag>
                    </ToggleButton>
                </Grid>
                <StackPanel.Triggers>
                    <EventTrigger RoutedEvent="StackPanel.MouseEnter">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation AccelerationRatio="1"
                                                        Duration="0:0:0.4"
                                                        FillBehavior="HoldEnd"
                                                        Storyboard.TargetProperty="Margin"
                                                         />

