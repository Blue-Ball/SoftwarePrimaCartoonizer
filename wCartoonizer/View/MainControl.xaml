                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter Property="Background" Value="#7D000000" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>

                                    </Button.Template>
                                </Button>

                            </StackPanel>
                        </Grid>
                    </Border>
                    <ToggleButton Name="zoomPanelPin"
                                  Cursor="Hand"
                                  Margin="4,-8,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  Style="{DynamicResource PinStype}">
