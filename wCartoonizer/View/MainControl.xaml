            <Button Name="Button_Open_Image" Background="Snow" BorderBrush="#FFEBC5FC"  Cursor="Hand" Click="Button_Click_Open_Image" FontSize="12" Foreground="Black" Height="32" HorizontalAlignment="Left" IsCancel="False" IsDefault="False" IsEnabled="True" Margin="250,115,0,0" VerticalAlignment="Top" 
                    Visibility="Hidden" Width="150">
                <StackPanel Orientation="Horizontal">
                    <Image Width="24" Height="24" Source="/PrimaCartoonizer;component/Images/Zoom-In-icon.png" />
                    <TextBlock Margin="2" VerticalAlignment="Center" FontSize="18" Text="View Full Size" />
                </StackPanel>
            </Button>

        </Grid>


    </Grid>
